<% if current_user %>
	<%= link_to image_tag("bin_big.png"), post_delete_path(:post_id => @blog.id), :method => :delete %>
	<%= link_to image_tag("edit.png"), edit_post_path(:post_id => @blog.id) %>
<% end %>

<%= link_to image_tag("comentar2.png"), nil, :id => :show_comment_form, :data_ref => @blog.id %>
<%= link_to image_tag("twitter.png"), "https://twitter.com/share?url=http://agilesoft.es/blogs/#{@blog.id}&via=agilesoft_es&text=#{(@blog.content[0..100]+"...").gsub(/<\/?[^>]*>/, "")}&lang=es", :target => "_blank" %>
<g:plusone count="false" href="http://agilesoft.es/blogs/#{@blog.id}"/>