<% if !@blog %>
  <h1 class="message">¡No hay ningún post!</h1>
  <% if current_user %>
  <div class="right_bar_content">
    <h2>Admin</h2>
    <ul>
      <li><%= link_to 'Nuevo post', create_post_path %></li>
      <li><%= link_to 'Listado de posts', posts_list_path %></li>
      <li><%= link_to 'Salir', destroy_user_session_path, :method => :delete %></li>
    </ul>
  </div>
  <% end %>
<% else %>
  <div id="add_comentario">
    <%= render 'partials/form_comentario' %>
  </div>
  <div id="main_content">
    <div id="post">
      <h2 id="post_title" style="float:left;"><%= @blog.title %></h2>
      <div id="botones">
        <%= render 'partials/botones' %>
      </div>
      <div id="content">
        <%= raw @blog.content %>
      </div>
      <p id="firma">Enviado por <em class="big"><%= @blog.author %></em> el <em class="big"><%= @blog.updated_at.to_s(:mifecha) %></em> a las <em class="big"><%= @blog.updated_at.to_s(:mihora) %></em>
      </p>
    </div>
    <div id="comments">
      <%= render 'partials/comentarios' %>
    </div>
  </div>
  <div class="right_bar">
  <div class="right_bar_content">
    <% if @old_posts && !@old_posts.empty? %>
      <h2>Listado de artículos</h2>
      <ul>
        <% @old_posts.each do |old_post| %>
          <% if @blog.id == old_post.id %>
            <li class="current_post"><%= link_to old_post.title, posts_path(:post_id => old_post.id) %></li>
          <% else %>
            <li><%= link_to old_post.title, posts_path(:post_id => old_post.id) %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>
  <% if current_user %>
  <div class="right_bar_content">
    <h2>Admin</h2>
    <ul>
      <li><%= link_to 'Nuevo post', create_post_path %></li>
      <li><%= link_to 'Listado de posts', posts_list_path %></li>
      <li><%= link_to 'Salir', destroy_user_session_path, :method => :delete %></li>
    </ul>
  </div>
  <% end %>
<% end %>
<div class="right_bar_content">
  <%= link_to image_tag('rss.png'), "/blogs/rss.rss" %>
  <%= link_to image_tag('twitter_big.png'), "https://www.twitter.com/agilesoft_es", :target=>"_blank,", :title => "Síguenos en Twitter" %>
</div>
</div>
<div style="clear:both;"></div>

<br/>