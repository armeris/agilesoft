<!DOCTYPE html>
<html>
<head>
  <title>AgileSoft | <%= @blog.title if @blog %></title>
  <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Ubuntu|Candal"%>
  <script type="text/javascript" src="https://apis.google.com/js/plusone.js" lang="es-es"></script>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>

  <script>
  	var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-11469470-3']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    
    $(document).ready(function(){
      $("pre.ruby").snippet("ruby",{style:"vim-dark"});
      $("pre.html").snippet("html",{style:"vim-dark"});
      $("pre.js").snippet("javascript",{style:"vim-dark"});
      $("pre.shell").snippet("sh",{style:"vim-dark"});
    });
  </script>
</head>
<body>
	<header>
		<div id="logo"></div>
	</header>
	<nav>
		<% if request.fullpath.match /about/ %>
			<%= link_to "Blog", root_path, :class => 'button' %>
			<%= link_to "Sobre mi", about_path, :class => 'button current' %>
		<% else %>
			<%= link_to "Blog", root_path, :class => 'button current' %>
			<%= link_to "Sobre mi", about_path, :class => 'button' %>
		<% end %>
	</nav>

  <% if !request.fullpath.match /about/ %>
    <div class="right_bar">
      <div class="right_bar_content">
        <% if @old_posts && !@old_posts.empty? %>
          <h2>Listado de artículos</h2>
          <ul>
            <% @old_posts.each do |old_post| %>
              <% if @blog.id == old_post.id %>
                <li class="current_post"><%= link_to old_post.title, posts_path(:post_id => old_post.id) %></li>
              <% else %>
                <li><%= link_to old_post.title, posts_path(:post_id => old_post.id) %></li>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="right_bar_content">
        <% if @tags && !@tags.empty? %>
          <h2>Listado de tags</h2>
          <ul>
            <% @tags.each do |tag| %>
              <li><%= link_to tag.name.humanize %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <% if current_user %>
        <%= render 'partials/admin_panel' %>
      <% end %>

      <div class="right_bar_content">
        <%= link_to image_tag('rss.png'), "/rss.rss" %>
        <%= link_to image_tag('twitter_big.png'), "https://www.twitter.com/agilesoft_es", :target=>"_blank,", :title => "Síguenos en Twitter" %>
      </div>
    </div>
  <% end %>

	<%= yield %>

</body>
</html>
